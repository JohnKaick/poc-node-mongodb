<html>

<head>
    <meta content="pt-br" http-equiv="Content-Language">
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
</head>

<body style="font-family:'Open Sans','Helvetica Neue', Helvetica, Arial, sans-serif'">

    <!-- Cabeçalho -->
    <div>

        <table style="width:100%">

            <tr style="background:#fff;color:#111">
                <td>
                    <h1 style="margin-bottom:2px">{{detalhes.empresa.razaoSocial}}</h1>
                </td>
                <td>
                    <a href="http://www.wisein.co">
                        <img align="right" src="https://s3-sa-east-1.amazonaws.com/ativati/wisein/public/logos/gray_150x37.png" alt="Wisein">
                    </a>
                </td>
            </tr>

            <tr style="background:#029acf">

                <td style="width:70%;padding:10px;color:#ffffff">
                    <h2 style="margin-bottom:2px">{{detalhes.projeto.exibicao}}</h2>
                    <h3 style="margin-bottom:2px">{{detalhes.titulo}}</h3>
                    <small>Revisão: {{detalhes.revisao}}</small>
                </td>

                <td style="width:30%;padding:10px;color:#ffffff">
                    <p align="center">{{date detalhes.data}}</p>
                </td>

            </tr>
        </table>
    </div>


    <!-- Participantes -->
    <div>
        <table style="width:100%;color:#111">

            <tr style="background:#ccc">
                <td colspan="3" style="padding:10px">
                    <b>Participantes</b>
                </td>
            </tr>

            <tr>
                <td style="padding:10px;background:#eee">
                    <b>Nome</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Empresa</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Responsável</b>
                </td>
            </tr>

            {{#each participantes}}
            <tr>
                <td style="padding:10px;background:#eee">
                    <p style="margin-bottom:2px;">{{nome}}</p>
                    <small>{{area}}</small>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{empresa}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{responsavel}}</p>
                </td>
            </tr>
            {{/each}}

        </table>
    </div>

    {{#each grupos}}

    <!-- Itens -->
    <div>
        <table style="width:100%;color:#111">

            <tr style="background:#ddd">
                <td colspan="3" style="padding:10px">
                    <h4 style="margin:0px">{{counter @index}}.0 {{label}}</h4>
                </td>
            </tr>

            <tr>
                <td style="width:5%;padding:10px;background:#eee">
                    <b>#</b>
                </td>
                <td style="width:85%;padding:10px;background:#eee">
                    <b>Descrição</b>
                </td>
                <td style="width:10%;padding:10px;background:#eee">
                    <b>Situação</b>
                </td>
            </tr>

            {{#each itens}}
            <tr>

                <td style="padding:10px;background:#eee">
                    <p>{{counter @../index}}.{{counter @index}}</p>
                </td>

                <td style="padding:10px;background:#eee">

                    <p style="margin-bottom:0px">
                        <b>{{escopo}}</b>
                    </p>
                    <p style="margin-bottom:8px;margin-top:8px;">{{anomalia}}</p>

                    <!-- Replica (Incluir a logica de SE não tiver nenhuma replica)-->
                    {{#each replicas}}
                    <table style="border:10;border-radius:8px;width:100%;background:#ccc">
                        <td style="width:90%;;border-radius:5px;padding:10px;background:#ffffff">
                            {{#if criadoPor}}
                            <p style="margin-bottom:0px">
                                <b>{{criadoPor.nome}}</b>
                            </p>
                            {{else}}
                            <p style="margin-bottom:0px">
                                <b>"Colaborador"</b>
                            </p>
                            {{/if}}
                            <p style="margin-bottom:8px;margin-top:8px;">{{mensagem}}</p>
                            <small>{{date criadoEm}}</small>
                        </td>
                    </table>
                    {{/each}}
                </td>

                <td style="padding:10px;background:#eee">
                    <p align="center" style="margin-bottom:3px">{{status situacao}}</p>
                </td>

            </tr>
            {{/each}}
        </table>
    </div>
    {{/each}}

    <!-- Arquivos -->
    <div>
        <table style="width:100%;color:#111">
            <tr>
                <td style="width:10%;padding:10px;background:#ccc">
                    <b>Arquivos analizados</b>
                </td>
            </tr>
            <tr>
                <td style="width:35%;padding:10px;background:#eee">
                    {{#each arquivos}}
                    <span style="margin-bottom:2px;margin-top:3px">{{arquivo}}, </span>
                    {{/each}}
                </td>
            </tr>
        </table>
    </div>

</body>

</html>