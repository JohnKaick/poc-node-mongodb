<html>

<head>
    <meta content="pt-br" http-equiv="Content-Language">
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
</head>

<body style="font-family:'Open Sans','Helvetica Neue', Helvetica, Arial, sans-serif'">

    <!-- Cabeçalho -->
    <div>
        <table style="width:100%;color:#fff">

            <tr style="background:#fff;color:#111">
                <td>
                    <h1 style="margin-bottom:2px">{{detalhes.empresa.razaoSocial}}</h1>
                </td>
                <td>
                    <a href="http://www.wisein.co">
                        <img align="right" src="https://s3-sa-east-1.amazonaws.com/ativati/wisein/public/logos/gray_150x37.png" alt="Wisein">
                    </a>
                </td>
            </tr>

            <tr style="background:#029acf">
                <td style="padding:10px">
                    <h2 style="margin-bottom:2px">{{detalhes.projeto.exibicao}}</h2>
                    <h3 style="margin-bottom:2px">{{detalhes.nome}}</h3>
                    <small>{{detalhes.local}}</small>
                </td>
                <td style="padding:10px">
                    <p align="center">{{date detalhes.dataHora}}</p>
                </td>
            </tr>

        </table>
    </div>

    <!-- Cabeçalho -->
    {{#if detalhes.pauta}}
    <table style="width:100%;color:#111">
        <tr style="background:#ccc">
            <td colspan="2" style="padding:10px">
                <h4 style="margin:0px">Pauta</h4>
            </td>
        </tr>

        <tr>
            <td colspan="2" style="padding:10px;background:#eee">
                <p style="white-space:pre-line;">{{detalhes.pauta}}</p>
            </td>
        </tr>
    </table>
    {{/if}}
    <!-- Participantes -->
    <div>
        <table style="width:100%;color:#111">

            <tr style="background:#ccc">
                <td colspan="3" style="padding:10px">
                    <h4 style="margin:0px">Participantes</h4>
                </td>
            </tr>

            <tr>
                <td style="padding:10px;background:#eee">
                    <b>Nome</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Empresa</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Presente</b>
                </td>
            </tr>

            {{#each participantes}}
            <tr>
                <td style="padding:10px;background:#eee">
                    <p style="margin-bottom:2px;">{{nome}}</p>
                    <small>{{area}}</small>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{empresa}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{presente}}</p>
                </td>
            </tr>
            {{/each}}

        </table>
    </div>

    <!-- Itens -->
    <div>
        <table style="width:100%;color:#111">

            <tr style="background:#ccc">
                <td colspan="5" style="padding:10px">
                    <h4 style="margin:0px">Itens</h4>
                </td>
            </tr>

            <tr>
                <td style="padding:10px;background:#eee">
                    <b>#</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Descrição</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Situação</b>
                </td>
            </tr>

            {{#each itens}}
            <tr>
                <td style="padding:10px;background:#eee">
                    <p>{{counter @index}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p style="margin-bottom:0px">
                        <b>{{assunto}}</b>
                    </p>
                    <p style="margin-bottom:8px;margin-top:8px;white-space:pre-line;">{{descricao}}</p>
                    <small>Responsável:
                        <br>
                        <b>{{responsavel}}</b>
                    </small>
                </td>
                <td style="padding:10px;background:#eee">
                    <p align="center" style="margin-bottom:3px">{{status situacao}}</p>
                    <p align="center" style="margin:0px">
                        <small>{{date prazo}}</small>
                    </p>
                </td>
            </tr>
            {{/each}}

        </table>
    </div>
</body>

</html>