<html>

<head>
</head>

<body>

    <!-- Cabeçalho -->
    <div>
        <table style="width:100%;color:#fff">

            <tr style="background:#fff;color:#111">
                <td>
                    <h1 style="margin-bottom:2px">{{detalhes.empresa.razaoSocial}}</h1>
                </td>
                <td>
                    <a href="http://www.wisein.co">
                        <img align="right" src="https://s3-sa-east-1.amazonaws.com/ativati/wisein/public/logos/gray_150x37.png" alt="Wisein">
                    </a>
                </td>
            </tr>

            <tr style="background:#029acf">
                <td style="padding:10px">
                    <h2 style="margin-bottom:2px">{{detalhes.projeto.exibicao}}</h2>
                    <h3 style="margin-bottom:2px">{{detalhes.descricao}}</h3>
                    <small>{{detalhes.local}}</small>
                </td>
                <td style="padding:10px">
                    <p align="center">{{date detalhes.data}}</p>
                </td>
            </tr>

        </table>
    </div>

    <!-- Tempo -->
    <div>
        <table style="width:100%;color:#111">

            <tr>
                <td style="padding:10px;background:#ccc">
                    <b>Tempo manhã</b>
                </td>
                <td style="padding:10px;background:#ccc">
                    <b>Tempo tarde</b>
                </td>
                <td style="padding:10px;background:#ccc">
                    <b>Tempo noite</b>
                </td>
            </tr>

            <tr>
                <td style="padding:10px;background:#eee">
                    <p>{{tempo detalhes.TempoManha}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{tempo detalhes.TempoTarde}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{tempo detalhes.TempoNoite}}</p>
                </td>
            </tr>
        </table>
    </div>

    <!-- Participantes -->
    <div>
        <table style="width:100%;color:#111">

            <tr style="background:#ccc">
                <td colspan="3" style="padding:10px">
                    <h4 style="margin:0px">Participantes</h4>
                </td>
            </tr>

            <tr>
                <td style="padding:10px;background:#eee">
                    <b>Nome</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Empresa</b>
                </td>
                <td style="padding:10px;background:#eee">
                    <b>Presente</b>
                </td>
            </tr>

            {{#each participantes}}
            <tr>
                <td style="padding:10px;background:#eee">
                    <p style="margin-bottom:2px;">{{nome}}</p>
                    <small>{{area}}</small>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{empresa}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p>{{presente}}</p>
                </td>
            </tr>
            {{/each}}

        </table>
    </div>

    <!-- Itens -->
    <div>
        <table style="width:100%;color:#111">

            <tr style="background:#ccc">
                <td colspan="5" style="padding:10px">
                    <h4 style="margin:0px">Itens</h4>
                </td>
            </tr>

            <tr>
                <td style="width:5%;padding:10px;background:#eee">
                    <b>#</b>
                </td>
                <td style="width:85%;padding:10px;background:#eee">
                    <b>Descrição</b>
                </td>
                <td style="width:10%;padding:10px;background:#eee">
                    <b>Situação</b>
                </td>
            </tr>

            {{#each itens}}
            <tr>
                <td style="padding:10px;background:#eee">
                    <p>{{counter @index}}</p>
                </td>
                <td style="padding:10px;background:#eee">
                    <p style="margin-bottom:0px">
                        <b>{{assunto}}</b>
                    </p>
                    <p style="margin-bottom:8px;margin-top:8px;white-space:pre-line;">{{descricao}}</p>
                    <small>Responsável:
                        <br>
                        <b>{{responsavel}}</b>
                    </small>
                </td>
                <td style="padding:10px;background:#eee">
                    <p align="center" style="margin-bottom:3px">{{status situacao}}</p>
                </td>
            </tr>
            {{/each}}

        </table>
    </div>

</body>

</html>